<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:backgroundTint="#812525"
        android:background="@color/teal_200">
    <Button
            android:text="INICIAR"
            android:layout_width="match_parent"
            android:layout_height="77dp" android:id="@+id/BtnIniciar" android:onClick="iniciar"/>
    <Button
            android:text="Pausar"
            android:layout_width="match_parent"
            android:layout_height="70dp" android:id="@+id/btnPausar" android:onClick="pausar"/>
    <Button
            android:text="Continuar"
            android:layout_width="match_parent"
            android:layout_height="67dp" android:id="@+id/btnContinuar" android:onClick="continuar"/>
    <Button
            android:text="Avanzar 20 segundos"
            android:layout_width="match_parent"
            android:layout_height="73dp" android:id="@+id/btnAvanzar" android:onClick="avanzar5"/>
    <Switch
            android:text="Reproducir en bucle?"
            android:layout_width="match_parent"
            android:layout_height="54dp" android:id="@+id/switch1" android:onClick="reproducirBucle"
            android:textSize="16sp"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="54dp"/>
    <TextView
            android:text="Estado: detenido"
            android:layout_width="match_parent"
            android:layout_height="48dp" android:id="@+id/tv1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:autoText="false"
            android:fontFamily="sans-serif-condensed" android:textDirection="locale" android:textSize="20sp"
            android:textAlignment="center"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="92dp"/>
    <TextView
            android:text="ReproductorMp32"
            android:layout_width="match_parent"
            android:layout_height="44dp" android:id="@+id/textView" android:textSize="24sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textAlignment="textEnd"/>
</LinearLayout>